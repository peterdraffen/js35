<html>
<head>
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/bootstrap-theme.min.css">
    <link rel="stylesheet" href="/css/index.css">
    <link rel="stylesheet" href="/css/forms.css">
</head>
<body>
    <div>
        <div class ="container min-container">
            <h2 class="basic-title">Add</h2>
            
            <!-- FORM DE PROMOCOES -->
            <% if (locals.validationErrors) { %>
                <ul style="list-unstyled">
                    <% for (var i = 0; i < locals.validationErrors.length; i++) { %>
                        <li class="alert alert-danger"><%= locals.validationErrors[i].msg %></li>
                    <% }; %>
                </ul>
            <% }; %>
            <form action="/promocoes" method="post" class="well" role="form">
                <div class="form-group">
                    <label for="titulo">Descricao</label>
                    <div class="input-group">
                        <span class="input-group-addon"><i class="glyphicon glyphicon-unchecked"></i></span>
                        <input type="text" name="descricao" placeholder="descricao da promocao" value="<%=promocao.descricao%>"/>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Gravar</button>
            </form>
        </div>
    </div>
</body>
</html>

